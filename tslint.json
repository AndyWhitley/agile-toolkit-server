{
  "extends": "tslint-config-standard",
  "rules": {
    "arrow-parens": [true, "ban-single-arg-parens"],
    "quotemark": [true, "single"],
    "indent": [true, "spaces", 2],
    "max-line-length": [true, 80],
    "semicolon": [true, "always"],
    "trailing-comma": {
      "options": [{ "multiline": "always", "singleline": "never" }],
      "severity": "default"
    }
  },
  "linterOptions": {
    "exclude": [
      "node_modules"
    ]
  }
}
